<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.dosmart.controllers.AddTodoController"
      style="-fx-background-color: #FFFFFF;">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="5">
        <Label text="📝" style="-fx-font-size: 36px;"/>
        <Label text="ДОДАТИ СПРАВУ"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    </VBox>

    <VBox spacing="18.0" alignment="CENTER" maxWidth="400">
        <VBox spacing="8.0">
            <Label text="НАЗВА СПРАВИ*"
                   style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <TextField fx:id="_name" prefHeight="40"
                       style="-fx-font-size: 14px; -fx-background-color: #FFFFFF; -fx-text-fill: #333333;
                              -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                              -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                              -fx-prompt-text-fill: #AAAAAA; -fx-font-family: 'System';"/>
        </VBox>

        <VBox spacing="8.0">
            <Label text="ОПИС СПРАВИ"
                   style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <TextArea fx:id="_description" prefRowCount="4" wrapText="true"
                      style="-fx-font-size: 13px; -fx-background-color: #FFFFFF; -fx-text-fill: #333333;
                             -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                             -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                             -fx-prompt-text-fill: #AAAAAA; -fx-font-family: 'System';"/>
        </VBox>

        <VBox spacing="8.0" alignment="CENTER">
            <Label text="ДАТА ДЕДЛАЙНУ (ОПЦІОНАЛЬНО)"
                   style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <DatePicker fx:id="_deadlineDate" prefHeight="40" maxWidth="200"
                        style="-fx-font-size: 13px; -fx-background-color: #FFFFFF; -fx-text-fill: #333333;
                               -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                               -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                               -fx-font-family: 'System';"/>
        </VBox>
    </VBox>

    <HBox alignment="CENTER" spacing="15.0">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <Button fx:id="_addButton" text="СТВОРИТИ" prefWidth="140" prefHeight="45"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #333333;
                       -fx-text-fill: white; -fx-background-radius: 0; -fx-border-width: 0;
                       -fx-cursor: hand; -fx-font-family: 'System';"/>
    </HBox>
</VBox>