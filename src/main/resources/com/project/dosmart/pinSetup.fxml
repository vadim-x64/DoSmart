<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.dosmart.controllers.PinSetupController"
      style="-fx-background-color: #FFFFFF;">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="8">
        <Label text="🔧️" style="-fx-font-size: 42px;"/>
        <Label text="НАЛАШТУВАННЯ ПІН-КОДА"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    </VBox>

    <VBox spacing="20.0" alignment="CENTER" maxWidth="350">

        <VBox spacing="8.0" alignment="CENTER">
            <Label text="ПІН-КОД"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <HBox alignment="CENTER" spacing="8.0">
                <PasswordField fx:id="_pinField" maxWidth="160" minWidth="160"
                               style="-fx-font-size: 18px; -fx-alignment: center; -fx-background-color: #FFFFFF;
                                      -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                                      -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                                      -fx-text-fill: #333333; -fx-font-family: 'System';"/>
                <TextField fx:id="_visiblePinField" maxWidth="160" minWidth="160"
                           style="-fx-font-size: 18px; -fx-alignment: center; -fx-background-color: #FFFFFF;
                                  -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                                  -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                                  -fx-text-fill: #333333; -fx-font-family: 'System';"/>
                <Button fx:id="_toggleVisibilityButton" text="🔒" prefWidth="40" prefHeight="36"
                        style="-fx-font-size: 14px; -fx-background-color: #F0F0F0; -fx-text-fill: #333333;
                               -fx-background-radius: 0; -fx-border-width: 2; -fx-border-color: #CCCCCC;
                               -fx-cursor: hand; -fx-border-radius: 0;"/>
            </HBox>
        </VBox>

        <VBox spacing="8.0" alignment="CENTER">
            <Label fx:id="_confirmLabel" text="ПІДТВЕРДЖЕННЯ"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <PasswordField fx:id="_confirmPinField" maxWidth="160" minWidth="160"
                           style="-fx-font-size: 18px; -fx-alignment: center; -fx-background-color: #FFFFFF;
                                  -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                                  -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                                  -fx-text-fill: #333333; -fx-font-family: 'System';"/>
            <TextField fx:id="_visibleConfirmPinField" maxWidth="160" minWidth="160"
                       style="-fx-font-size: 18px; -fx-alignment: center; -fx-background-color: #FFFFFF;
                              -fx-border-color: #CCCCCC; -fx-border-width: 2; -fx-background-radius: 0;
                              -fx-border-radius: 0; -fx-focus-color: #333333; -fx-faint-focus-color: transparent;
                              -fx-text-fill: #333333; -fx-font-family: 'System';"/>
        </VBox>
    </VBox>

    <Button fx:id="_setupButton" text="ВСТАНОВИТИ ПІН-КОД" prefWidth="220" prefHeight="45"
            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #333333;
                   -fx-text-fill: white; -fx-background-radius: 0; -fx-border-width: 0;
                   -fx-cursor: hand; -fx-font-family: 'System';"/>

    <HBox alignment="CENTER">
        <Label fx:id="_messageLabel" wrapText="true" textAlignment="CENTER"
               style="-fx-font-size: 14px; -fx-font-family: 'System';"/>
    </HBox>
</VBox>