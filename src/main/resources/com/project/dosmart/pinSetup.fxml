<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.dosmart.controllers.PinSetupController">
    <padding>
        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
    </padding>
    <Label text="Встановлення пін-кода" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <VBox spacing="15.0" alignment="CENTER">
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="Пін-код (4 цифри):" style="-fx-font-size: 14px;"/>
            <HBox alignment="CENTER" spacing="10.0">
                <PasswordField fx:id="_pinField" maxWidth="150" minWidth="150"
                               style="-fx-font-size: 18px; -fx-alignment: center;"/>
                <TextField fx:id="_visiblePinField" maxWidth="150" minWidth="150"
                           style="-fx-font-size: 18px; -fx-alignment: center;"/>
                <Button fx:id="_toggleVisibilityButton" text="🔒" prefWidth="40" prefHeight="30"
                        style="-fx-font-size: 12px;"/>
            </HBox>
        </VBox>
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="Підтвердження:" style="-fx-font-size: 14px;"/>
            <PasswordField fx:id="_confirmPinField" maxWidth="150" minWidth="150"
                           style="-fx-font-size: 18px; -fx-alignment: center;"/>
            <TextField fx:id="_visibleConfirmPinField" maxWidth="150" minWidth="150"
                       style="-fx-font-size: 18px; -fx-alignment: center;"/>
        </VBox>
    </VBox>
    <Button fx:id="_setupButton" text="Встановити пін-код" prefWidth="200" prefHeight="35"
            style="-fx-font-size: 14px;"/>
    <Label fx:id="_messageLabel" style="-fx-font-size: 13px;" wrapText="true" maxWidth="300"
           textAlignment="CENTER"/>
</VBox>