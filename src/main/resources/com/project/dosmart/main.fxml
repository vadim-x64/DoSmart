<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.dosmart.controllers.MainController"
            fx:id="_rootPane">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
            <Button fx:id="_addTodoButton" text="ДОДАТИ СПРАВУ"/>
            <Button fx:id="_updateTodoButton" text="ОНОВИТИ СПРАВУ"/>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.4" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </BorderPane.margin>
            <ListView fx:id="_todoList"/>
            <VBox spacing="5">
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <Label text="Опис справи:"/>
                <TextArea fx:id="_description" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>